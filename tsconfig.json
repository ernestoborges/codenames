{
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  },
  "compilerOptions": {
    "outDir": "./dist", // Diretório de saída para os arquivos compilados
    // "rootDir": "./src", // Diretório raiz onde os arquivos TypeScript estão
    "module": "esnext", // Use 'esnext' para que funcione bem com ESModules
    "target": "es2017", // Defina o alvo do JavaScript para o ES2017 ou mais recente
    "lib": [
      "dom",
      "es2017"
    ], // Libs do JS que você quer suportar
    "esModuleInterop": true, // Para interoperar com módulos CommonJS
    "moduleResolution": "node", // Resolução de módulo estilo Node.js
    "resolveJsonModule": true, // Permite importar arquivos JSON
    "skipLibCheck": true, // Ignora checagem de bibliotecas para reduzir tempo de build
    "strict": true, // Habilita todas as verificações de tipo estritas
    "noImplicitAny": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    // "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": false
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    ".next/types/**/*.ts"
    // ".next/types/**/*.ts"
    // ".next/types/**/*.ts"
    // "next.config.mts",
    // "next.config.mts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
